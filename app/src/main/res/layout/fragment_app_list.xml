<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.zaze.core.ui.TopAppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|enterAlways">

            <Button
                android:id="@+id/app_extract_data_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提取数据"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/app_count_tv"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/app_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                app:layout_constraintBottom_toBottomOf="@id/app_extract_data_btn"
                app:layout_constraintLeft_toRightOf="@id/app_extract_data_btn"
                app:layout_constraintTop_toTopOf="@id/app_extract_data_btn"
                tools:text="搜索到1111个应用" />

            <CheckBox
                android:id="@+id/app_resolving_apk_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="解析/sdcard/zaze/apk下apk"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/app_extract_data_btn" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.zaze.core.ui.TopAppBarLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/app_list_recycle_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>

