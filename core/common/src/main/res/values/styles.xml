<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MyApp" parent="Theme.Custom.MD3" />

    <style name="Theme.MyApp.MD3" parent="Theme.Custom.MD3" />

    <style name="Theme.MyApp.Black" parent="Theme.Custom.MD3.Black" />

    <style name="Theme.MyApp.Light" parent="Theme.Custom.Base.Light" />

    <style name="Theme.MyApp.Dark" parent="Theme.Custom.Base.Dark" />

    <style name="Theme.MyApp.Adaptive" parent="Theme.Custom.Base.Adaptive" />

    <style name="Toolbar" parent="Toolbar.Base" />

    <style name="Material.Text.Body" parent="TextAppearance.AppCompat.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/spacing_normal</item>
        <item name="android:padding">@dimen/spacing_normal</item>
    </style>


    <style name="OverFlowButton">
        <item name="android:src">@drawable/ic_more_vert</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:scaleType">center</item>
        <item name="android:background">?attr/roundSelector</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="MyLineActionButton" parent="@style/MyButton">
        <item name="android:background">#FFFFFF</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDy">1.2</item>
        <item name="android:shadowDx">1.2</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="MyButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textAppearance">@style/TextAppearanceNormal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/button_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/button_padding_vertical</item>
        <!--        <item name="android:background">@null</item>-->
        <item name="android:minHeight">40dp</item>
        <item name="android:minWidth">40dp</item>
    </style>


    <style name="LoadingDialog" parent="@style/MyDialog">
        <item name="android:textSize">18sp</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="MyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TransparentDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowMinWidthMajor">40%</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="CustomTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:typeface">monospace</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="TextSize">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextSize.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextSize.H1">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="TextSize.H2">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextSize.H3">
        <item name="android:textSize">20sp</item>
    </style>


    <style name="MyCardView" parent="CardView">
        <item name="android:minHeight">56dp</item>
        <item name="android:padding">12dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <!-- 内容添加padding -->
        <item name="contentPadding">12dp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">true</item>
    </style>
</resources>